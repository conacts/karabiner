{
  "title": "CTRL-G ---> Backspace",
  "rules": [
    {
      "description": "Remap ctrl-g to backspace",
      "type": "basic",
      "manipulators": [
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        },
        {
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "option"
              ]
            }
          ]
        }
      ]
    }
  ]
}
